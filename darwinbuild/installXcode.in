#!/bin/bash

PREFIX=%%PREFIX%%
BINDIR=$PREFIX/share/darwinbuild

BROOT=$1
VER=$(/usr/bin/xcodebuild -version | grep version | cut -d "-" -f 2 | cut -d ";" -f 1 | cut -d "." -f 1)

if [ "$VER" -gt "920" ];
then
	if [ "$VER" -gt "1000" ];
	then
		"$BINDIR/installXcode31" "$BROOT";	
	else
		"$BINDIR/installXcode3" "$BROOT";	
	fi
else
	"$BINDIR/installXcode2" "$BROOT";
fi


